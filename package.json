{
  "name": "eslint-plugin-function",
  "version": "0.0.31",
  "private": false,
  "description": "(WIP) The ESLint plugin for function-related rules.",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "build:pkgs": "pnpm -F \"./.pkgs/*\" run build",
    "format:check": "dprint check",
    "format:package-json": "pnpm m exec sort-package-json -q package.json && dprint fmt",
    "format:write": "dprint fmt",
    "lint": "pnpm run lint:deps && pnpm run lint:es && pnpm run lint:ts && pnpm run lint:publish",
    "lint:deps": "skott -m file-tree -e .ts -s",
    "lint:es": "eslint . --max-warnings 10",
    "lint:publish": "publint",
    "lint:ts": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@eslint-react/ast": "^2.0.2-beta.1",
    "@eslint-react/eff": "^2.0.2-beta.1",
    "@eslint-react/kit": "^2.0.2-beta.1",
    "@typescript-eslint/scope-manager": "^8.44.1",
    "@typescript-eslint/type-utils": "^8.44.1",
    "@typescript-eslint/types": "^8.44.1",
    "@typescript-eslint/utils": "^8.44.1",
    "string-ts": "^2.2.1",
    "ts-pattern": "^5.8.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.3.0",
    "@local/configs": "workspace:*",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.5.2",
    "@typescript-eslint/rule-tester": "^8.44.1",
    "dedent": "^1.7.0",
    "dprint": "^0.50.2",
    "eslint": "^9.36.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "jiti": "^2.6.0",
    "publint": "^0.3.13",
    "skott": "^0.35.6",
    "tsdown": "^0.15.5",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "eslint": "^9.36.0",
    "ts-api-utils": "^2.1.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "dprint"
    ],
    "overrides": {
      "ts-api-utils": "^2.1.0",
      "typescript": "^5.9.2"
    }
  }
}
